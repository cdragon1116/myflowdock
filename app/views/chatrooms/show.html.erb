<div class="d-flex flex-nowrap w-100 align-items-stretch">
  <div class="chatroom" >
    <div class="row no-gutters align-items-center chatroom-name shadow border-left">
      <h3 class='h4 mb-0'><%= chatroom_link(@chatroom) %></h3>

      <nav class="navbar p-0 ml-3 mr-auto align-items-center">
        <% @chatroom.online_users.each do |user| %>
          <%= render 'shared/user_online', user: user %> 
        <% end %>
        <% if @chatroom.offline_users.size != 0 %>
          <div class="small mx-2">|</div>
        <% end %>
        <% @chatroom.offline_users.each do |user| %>
          <%= render 'shared/user_offline', user:user %> 
        <% end %>
      </nav>
    </div>

    <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' class='message-box'>
      <div class="history-loader text-center">
        <%= render 'shared/ducks' %>
      </div>
      <div id="inner">
        <% @messages.each do |message| %>
          <% cache message do %> 
          <%= render message %>
          <% end %>
        <% end %>
      </div>
    </div>

    <div class="form">
      <%= form_for Message.new, remote: true,  authenticity_token: true do |form| %>
        <div class="form-group d-flex align-items-center mb-0">
          <%= form.text_area :body, :class => 'input form-control', :placeholder => "有話快說！！！", autofocus: true, id: 'message_input' %>
          <%= form.hidden_field :user_id, :value => current_user.id %>
          <%= form.hidden_field :chatroom_id, :value => @chatroom.id %>
          <%= form.button :submit , :class => 'btn' do %>
            <i class="fas fa-sign-in-alt text-dark"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div id="chatroom-loader" class="loader"></div>
  </div>
  <%= render 'right_panel' %>
</div>
