<div class="d-flex flex-nowrap w-100 align-items-stretch">
  <div id="chatroom" >
    <div class="row no-gutters align-items-center justify-content-between chatroom-name shadow border-left">
      <h3 class='h4 mb-0'><%= chatroom_link(@chatroom) %></h3>

      <nav class="navbar p-0 ml-3 mr-auto align-items-center chatroom-users">
        <% @chatroom_users_online.each do |user| %>
          <%= render 'shared/user_online', user:user %> 
        <% end %>
        <% if @chatroom_users_offline.size != 0 %>
          <div class="small mx-2">|</div>
        <% end %>
        <% @chatroom_users_offline.each do |user| %>
          <%= render 'shared/user_offline', user:user %> 
        <% end %>
      </nav>

    </div>


    <div data-behavior='messages' data-chatroom-id='<%= @chatroom.id %>' id='message-box'>
      <div class="history-loader text-center">
        <%= render 'shared/ducks' %>
      </div>
      <div id="inner">
        <% @messages.each do |message| %>
          <%= render message %>
        <% end %>
      </div>
    </div>

    <div class="form">
      <%= form_for [@chatroom, Message.new] ,remote: true, authenticity_token: true do |form| %>
        <div class="form-group d-flex align-itmes-center mb-0">
          <%= form.text_area :body, :class => 'input form-control',:placeholder => "有話快說！！！", autofocus: true %>
          <%= form.hidden_field :user_id, :value => current_user.id %>
          <%= form.hidden_field :chatroom_id, :value => @chatroom.id %>
          <%= form.button :submit , :class => 'btn' do %>
            <i class="fas fa-sign-in-alt text-dark"></i>
          <% end %>
        </div>
      <% end %>
    </div>
    <div id="chatroom-loader" class="loader"></div>
  </div>
  <nav id="right-panel">
      <button type="button" id="rightPanelCollapse" class="btn">
        <i class="fas fa-toggle-on"></i>
      </button>
    <div id="loader"></div>
    <div class="result-loader text-center d-none">
      <%= render 'shared/ducks' %>
    </div>
    <div id="search-result">
    </div>
  </nav>
</div>
