<div class="container pt-5">
  <div class="text-center mb-5">
    <%= user_image(current_user, 150) %>
    <h3 class="text-gray-800"><%= current_user.username %></h3>
  </div>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= bootstrap_devise_error_messages! %>

    <div class="row">
      <div class="form-group col-12 col-md-6">
        <%= f.label :username %>
        <%= f.text_field :username, autofocus: false , autocomplete: 'username',class: 'form-control' %>
      </div>

      <div class="form-group col-12 col-md-6">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: 'email', class: 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image,class: 'form-control' %>
    </div>


    <div class="row">
      <div class="col-12 col-md-6">
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, autocomplete: 'new-password', class: 'form-control' %>
          <small class="form-text text-muted"><%= t('.leave_blank_if_you_don_t_want_to_change_it') %></small>
        </div>
      </div>
      <div class="col-12 col-md-6">
        <div class="form-group">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control'  %>
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: 'current-password', class: 'form-control' %>

      <small class="form-text text-muted"><%= t('.we_need_your_current_password_to_confirm_your_changes') %></small>
    </div>

      <%= f.submit t('.update'), class: 'btn btn-sm btn-dark' %>
  <% end %>

  <p><%= link_to t('.cancel_my_account'), registration_path(resource_name), class:'small text-gray-500',data: { confirm: t('.are_you_sure') }, method: :delete %>.</p>


</div>
