<%= link_to chatroom_path(notification.notifiable) do %> 
  <div class="d-flex dropdown-item flex-nowrap align-items-center" data-behavior='notification' data-notification="<%= notification.id%>">
    <div class="mr-3">
      <div class="icon-circle bg-dark">
        <i class="fas fa-user-plus text-light"></i>
      </div>
    </div>

    <div class="d-flex flex-column">
        <div class="text-500"><%= "#{notification.actor.username} - 把你踢出 #{notification.notifiable.name}" %></div>
        <p class="text-gray-500">你可以滾了！</p>
    </div>
  </div>
<% end %>
