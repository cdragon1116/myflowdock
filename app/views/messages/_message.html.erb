<div class="message icon navbar align-items-start flex-nowrap" data-message="<%= message.id%>" data-parent="<%= message.parent.id%>">
  <div class="navbar flex-nowrap">
    <%= message_icon(message) %>
    <div class="img ml-3">
      <%= form_tag create_one_on_one_chatrooms_path, :method=> :post , :id => "#{message.id}" do %>
        <%= hidden_field_tag "user_id",  message.user.id %>
        <%= hidden_field_tag "chatroom_id",  message.chatroom.id %>
        <%= hidden_field_tag "authenticity_token",  form_authenticity_token %>
        <%= link_to '#', :onclick => "$('##{message.id}').submit()" do  %>
          <%= user_image(message.user, 32) %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="flex-grow-1" style="min-width: 0;">
    <span>
      <%= message.user.username%>
    </span>
    <div class="message-body">
      <%= raw(markdown(message.body)) %>
    </div>
  </div>
</div>
