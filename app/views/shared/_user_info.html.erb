<div class="nav-item dropdown no-arrow mx-1 dropdown">
  <a class="nav-link dropdown-toggle" href="#" id="userInfoDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= user_image(user, 32) %>
  </a>

  <div class="dropdown-menu shadow animated--grow-in dropdown-menu-left py-0" id="userInfoMenu" aria-labelledby="userInfoDropdown" >
    <div class="d-flex align-items-center justify-content-center mx-3">
      <%= user_image(user, 32) %>
    <div class="ml-2 py-2">
      <%= user.username %>
      <div class="small text-gray-500"><%= user.email %></div>
    </div>
    </div>
    <% if current_user != user  %>
      <%= form_tag create_one_on_one_chatrooms_path, :method=> :post , :id => "#{user.id}", :class=>'drop-down-item, text-center' do %>
        <%= hidden_field_tag "user_id",  user.id %>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= link_to '#', :onclick => "$('##{user.id}').submit()",:class =>'dropdown-item text-center small text-gray-500 bg-dark rounded-bottom' do  %>
          <div>create-1-on-1 Chat</div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
