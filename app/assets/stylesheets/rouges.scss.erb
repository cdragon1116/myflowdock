
.message-body{
  <%= Rouge::Themes::Base16.mode(:light).render(scope: '.highlight') %>
  
  code{
    margin: 1rem;
    padding: 10px;
  }

  div.highlight {
    font-size: 14px;
    line-height: 18px;
    padding-bottom: 0px;
    margin-bottom: 12px;
  }
  .highlight .err{
    background-color: transparent;
  }
  pre.highlight {
    font-size: 14px;
    line-height: 18px;
    border-radius: 5px;
    padding-bottom: 10px;
    width: 90%;
  }
  p{
    font-size:16px;
  }
  blockquote {
    margin: 1em 1em;
    color: #999;
    border-left: 2px solid #999;
    padding-left: 1em;
    background-color: #fff;
  }
  ul li {
    list-style: square inside;
  }
  ol li {
    list-style: decimal inside;
  }
}



