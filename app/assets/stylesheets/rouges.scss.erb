// markdown style
.message-body{
  <%= Rouge::Themes::Base16.mode(:dark).render(scope: '.highlight') %>
  h1, h2, h3, h4, h5, h6{
    padding-bottom: 0.2rem;
  }
  h1{
    font-size: 3rem;
    line-height: 3rem;
  }
  h2{
    font-size: 2.5rem;
    line-height: 2.5rem;
  }
  h3{
    font-size: 2rem;
    line-height: 2rem;
  }
  h4{
    font-size: 1.8rem;
    line-height: 1.8rem;
  }
  h5{
    font-size: 1.5rem;
    line-height: 1.5rem;
  }
  h6{
    font-size: 1rem;
    line-height: 1rem;
  }
  strong{
    font-weight: 800;
  }
  em{
    font-style: italic;
  }
  pre{
    background-color: #fafafa;
    padding: 0 20px 18px;
    margin: 10px 20px;
    border: 1px solid #ccc;
    font-size: 14px;
    line-height: 18px;

  }
  .highlight {
    background-color: #333;
  }
  .highlight .err{
    background-color: transparent;
  }
  p{
    font-size:16px;
    display:block;
  }
  blockquote {
    margin: 1em 1em;
    color: #999;
    border-left: 2px solid #999;
    padding-left: 1em;
    background-color: #fff;
  }

  ul li {
    list-style: square inside;
  }

  ol li {
    list-style: decimal inside;
  }

  code,
  pre {
    -moz-osx-font-smoothing: auto;
    -webkit-font-smoothing: auto;
    font-family: monospace;
  }
}


@media (max-width: 768px) {
  .message-body{
    img{
      max-width: 80%;
    }
  }
}
